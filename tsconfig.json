{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "noImplicitUseStrict": true,
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "rootDir": ".",
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "demo",
        "demo-ng",
        "bin"
    ]
}